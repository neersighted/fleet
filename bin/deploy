#!/usr/bin/env bash

if [ "$1" != "" ]; then
  target=$1
  shift
else
  echo "Must specify a playbook!"
  exit 1
fi

playbook=plays/${target}.yml

if ! [ -f "${playbook}" ]; then
  echo "Playbook ${target} does not exist!"
  exit 1
fi

bin/event deploy.fleet.${target}

ansible-playbook ${playbook} $@
