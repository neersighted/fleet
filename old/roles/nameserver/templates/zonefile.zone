; GLOBALS
$ORIGIN {{ item.key }}.
$TTL {{ item.value.ttl }}

; AUTHORITY
@ SOA {{ item.value.primary }}. {{ item.value.email }}. (
      {{ item.value.serial }}
      1h         ; refresh
      15m        ; retry
      2w         ; expire
      1h )       ; minimum/negative

; NAMESERVERS
{% for nameserver in nameserver_nameservers %}
@ NS {{ nameserver }}.
{% endfor %}

; RECORDS
{{ item.value.records }}
