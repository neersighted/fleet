firewall_rules:
  www:
    port: 80,443
    proto: tcp
    rule: allow

webserver_vhosts:
  munin.neersighted.com: |-
    listen 0.0.0.0:80 default_server;
    listen [::]:80 default_server;
    server_name munin.neersighted.com;

    location /static/ {
       alias /etc/munin/static/;
    }

    location ^~ /dynamic/ {
      access_log off;
      fastcgi_split_path_info ^(/dynamic)(.*);
      fastcgi_param PATH_INFO $fastcgi_path_info;
      fastcgi_pass unix:/run/munin/munin-graph.sock;
      include fastcgi_params;
    }

    location / {
      fastcgi_split_path_info ^(/)(.*);
      fastcgi_param PATH_INFO $fastcgi_path_info;
      fastcgi_pass unix:/run/munin/munin-html.sock;
      include fastcgi_params;
    }
